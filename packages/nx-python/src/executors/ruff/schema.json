{
  "$schema": "http://json-schema.org/schema",
  "title": "Ruff executor",
  "description": "",
  "type": "object",
  "properties": {
    "outputFile": {
      "type": "string",
      "description": "Output pylint file path"
    },
    "silent": {
      "type": "boolean",
      "description": "Hide output text.",
      "default": false
    },
    "fix": {
      "type": "boolean",
      "description": "Fix issues.",
      "default": true
    },
    "config": {
      "type": "string",
      "description": "config directory.",
      "default": "ruff.toml"
    }
  },
  "required": [
    "outputFile"
  ]
}
